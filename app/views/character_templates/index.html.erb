<%- model_class = CharacterTemplate -%>
<div class="profile-panel bit-content orange-gray">
    <div class="page-header">
      <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <table class="table">
      <thead>
      <tr>
        <!--TODO СТИЛИЗИРОВАТЬ-->
        <th>Image</th>
        <th><%= image_tag('my_icons/knight.png', size: '80x80', title: 'имя героя') %></th>
        <th><%= image_tag('my_icons/hp1.png', size: '80x80', title: 'здоровье') %></th>
        <th><%= image_tag('my_icons/mp.png', size: '80x80', title: 'мана') %></th>
        <th><%= image_tag('my_icons/strength.png', size: '80x80', title: 'сила') %></th>
        <th><%= image_tag('my_icons/intellect.png', size: '80x80', title: 'интеллект') %></th>
        <th><%= image_tag('my_icons/agility.png', size: '80x80', title: 'ловкость') %></th>
        <th><%= t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @character_templates.each do |character_template| %>
          <tr>
            <td><%=image_tag(character_template.image.image_content.url()) %></td>
            <td><%= character_template.name %></td>
            <td><%= character_template.hp %></td>
            <td><%= character_template.mp %></td>
            <td><%= character_template.strength %></td>
            <td><%= character_template.intellect %></td>
            <td><%= character_template.agility %></td>
            <td>
              <%= link_to t('.show', :default => t("helpers.links.show")),
                          character_template_path(character_template), :class => 'btn btn-bit btn-lg outline' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_character_template_path(character_template), :class => 'btn btn-bit btn-lg outline' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          character_template_path(character_template),
                          :method => :delete,
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-bit btn-lg red' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_character_template_path,
                :class => 'btn btn-bit btn-lg green' %>

  <div class="footer">
    <%= link_to t('helpers.links.back', :default => t("helpers.links.back")),
                table_index_path,
                :class => 'btn btn-bit btn-lg outline' %>
  </div>
</div>