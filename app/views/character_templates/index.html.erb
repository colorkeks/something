<%- model_class = CharacterTemplate -%>
<div class="profile-panel bit-content orange-gray">
    <div class="page-header">
      <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <table class="table">
      <thead>
      <tr>
        <th>Image</th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:hp) %></th>
        <th><%= model_class.human_attribute_name(:strength) %></th>
        <th><%= model_class.human_attribute_name(:intellect) %></th>
        <th><%= model_class.human_attribute_name(:agility) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%= t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @character_templates.each do |character_template| %>
          <tr>
            <td><%=image_tag(character_template.image.image_content.url()) %></td>
            <td><%= character_template.name %></td>
            <td><%= character_template.description %></td>
            <td><%= character_template.hp %></td>
            <td><%= character_template.strength %></td>
            <td><%= character_template.intellect %></td>
            <td><%= character_template.agility %></td>
            <td><%= character_template.created_at %></td>
            <td>
              <%= link_to t('.show', :default => t("helpers.links.show")),
                          character_template_path(character_template), :class => 'btn btn-bit btn-lg outline' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_character_template_path(character_template), :class => 'btn btn-bit btn-lg outline' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          character_template_path(character_template),
                          :method => :delete,
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-bit btn-lg red' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_character_template_path,
                :class => 'btn btn-bit btn-lg green' %>
</div>