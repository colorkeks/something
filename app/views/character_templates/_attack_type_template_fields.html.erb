<div class="attack_types_content fields">
  <div class="attack_name_desc">
    <%= f.input :name, label: 'Название', input_html: {class: 'form-control'} %>
    <%= f.input :desc, label: 'Описание', input_html: {class: 'form-control'} %>
  </div>
  <div class="attack_column">
    <%= f.input :target, as: :select, label: 'Цель', collection: AttackTypeTemplate::ATTACK_TARGET, input_html: {class: 'form-control'} %>
    <%= f.input :attack_type, as: :select, label: 'Тип_Атаки', collection: AttackTypeTemplate::ATTACK_TYPE, input_html: {class: 'form-control'} %>
    <%= f.input :cost_type, as: :select, label: 'Тип_Платы', collection: AttackTypeTemplate::COST_TYPE, input_html: {class: 'form-control'} %>
    <%= f.input :crit_rate, as: :select, label: 'Крит.Множ.', collection: AttackTypeTemplate::CRIT_RATE, input_html: {class: 'form-control'} %>
  </div>
  <div class="attack_column">
    <%= f.input :attack, label: 'Атака', input_html: {class: 'form-control'} %>
    <%= f.input :cost, label: 'Плата', input_html: {class: 'form-control'} %>
    <%= f.input :crit_chance, label: 'Крит.Шанс', input_html: {class: 'form-control', placeholder: '%'} %>

  </div>
  <div class="remove">
    <%= link_to_remove_fields '<i class="glyphicon glyphicon-remove"></i>', f, 'btn btn-bit btn-tn red' %>
  </div>
</div>