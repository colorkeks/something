<div class="fields" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <div class="dropdown">
    <div class='item_content avatar' data-toggle="dropdown">
      <div class='preview img-wrapper'></div>
    </div>
    <ul class="dropdown-menu" role="menu">
      <li role="presentation"><a class="item_modal" role="menuitem" tabindex="-1" href="#">Предмет</a></li>
      <li role="presentation">
        <a role="menuitem" tabindex="-1" href="#"><%= link_to_remove_fields 'Удалить', f, '' %></a></li>
    </ul>
  </div>


  <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-4">
              <%= f.simple_fields_for :image, f.object.build_image do |ff| %>
                  <div class="avatar">
                    <div class="preview img-wrapper"></div>
                    <%= render partial: 'images/image_fields', locals: {f: ff} %>
                  </div>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-6">
                  <div><%= f.input :name, input_html: {class: 'form-control'} %></div>
                  <div><%= f.input :item_type, label: 'Item_type', input_html: {class: 'form-control'} %></div>
                  <div><%= f.input :strength, input_html: {min: '0', step: 'any', class: 'form-control'} %></div>
                  <div><%= f.input :intellect, input_html: {min: '0', step: 'any', class: 'form-control'} %></div>
                  <div><%= f.input :agility, input_html: {min: '0', step: 'any', class: 'form-control'} %></div>
                </div>
                <div class="col-md-6">
                  <div><%= f.input :sell_cost, label: 'Sell_cost', input_html: {min: '1', step: 'any', class: 'form-control'} %></div>
                  <div><%= f.input :purchasable, input_html: {class: 'checkbox'} %></div>
                  <div><%= f.input :buy_cost, label: 'Buy_cost', input_html: {min: '1', step: 'any', class: 'form-control'} %></div>
                </div>
              </div>
              <div class="row">
                <table class="table">
                  <tbody>
                  <tr>
                    <!--TODO ЕСЛИ НЕ МОЖЕТ БЫТЬ КУПЛЕН ТО НЕ УКАЗЫВАТЬ BUY_COST-->

                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <h4>Сопротивления</h4>
              <table class="table content">
                <tbody>
                <tr>
                  <%= f.simple_fields_for :resist_template, f.object.build_resist_template do |ff| %>
                      <%= render partial: 'resist_template_fields', locals: {f: ff} %>
                  <% end %>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
          </br>
          </br>
          <div class="row">
            <div class="col-md-12">
              <h4>Параметры атаки</h4>
              <table class="table">
                <tbody>
                <%= f.simple_fields_for :attack_type_templates, f.object.build_attack_type_template do |ff| %>
                    <%= render partial: 'attack_type_template_fields', locals: {f: ff} %>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>

        </div>


        <div class="modal-footer">
          <div class="btn btn-bit btn-lg outline" data-dismiss="modal">Закрыть</div>
        </div>

      </div>
    </div>
  </div>
</div>