<p id="notice"><%= notice %></p>

<h1>Listing Attack Type Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attack</th>
      <th>Attack type</th>
      <th>Crit chance</th>
      <th>Crit dmg</th>
      <th>Character template</th>
      <th>Item template</th>
      <th>Monster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attack_type_templates.each do |attack_type_template| %>
      <tr>
        <td><%= attack_type_template.name %></td>
        <td><%= attack_type_template.attack %></td>
        <td><%= attack_type_template.attack_type %></td>
        <td><%= attack_type_template.crit_chance %></td>
        <td><%= attack_type_template.crit_dmg %></td>
        <td><%= attack_type_template.character_template_id %></td>
        <td><%= attack_type_template.item_template_id %></td>
        <td><%= attack_type_template.monster_id %></td>
        <td><%= link_to 'Show', attack_type_template %></td>
        <td><%= link_to 'Edit', edit_attack_type_template_path(attack_type_template) %></td>
        <td><%= link_to 'Destroy', attack_type_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

