<p id="notice"><%= notice %></p>

<h1>Listing Attack Types</h1>

<table>
  <thead>
    <tr>
      <th>Attack</th>
      <th>Crit chance</th>
      <th>Crit dmg</th>
      <th>Character</th>
      <th>Item</th>
      <th>Attack type template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attack_types.each do |attack_type| %>
      <tr>
        <td><%= attack_type.attack %></td>
        <td><%= attack_type.crit_chance %></td>
        <td><%= attack_type.crit_dmg %></td>
        <td><%= attack_type.character_id %></td>
        <td><%= attack_type.item_id %></td>
        <td><%= attack_type.attack_type_template_id %></td>
        <td><%= link_to 'Show', attack_type %></td>
        <td><%= link_to 'Edit', edit_attack_type_path(attack_type) %></td>
        <td><%= link_to 'Destroy', attack_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

