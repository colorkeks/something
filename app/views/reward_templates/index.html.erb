<%- model_class = RewardTemplate -%>
<div class="profile-panel bit-content orange-gray">
  <div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th>Exp:</th>
      <th>Gold</th>
      <th><%= t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @reward_templates.each do |reward_template| %>
        <tr>
          <td><%= reward_template.name %></td>
          <td><%= reward_template.desc %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        reward_template_path(reward_template), :class => 'btn btn-bit btn-lg outline' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_reward_template_path(reward_template), :class => 'btn btn-bit btn-lg outline' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        reward_template_path(reward_template),
                        :method => :delete,
                        :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                        :class => 'btn btn-bit btn-lg red' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_reward_template_path,
              :class => 'btn btn-bit btn-lg green' %>


  <div class="footer">
    <%= link_to t('helpers.links.back', :default => t("helpers.links.back")),
                table_index_path,
                :class => 'btn btn-bit btn-lg outline' %>
  </div>
</div>