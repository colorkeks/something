<p id="notice"><%= notice %></p>

<h1>Listing Armor Templates</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @armor_templates.each do |armor_template| %>
      <tr>
        <td><%= armor_template.type %></td>
        <td><%= armor_template.percent %></td>
        <td><%= link_to 'Show', armor_template %></td>
        <td><%= link_to 'Edit', edit_armor_template_path(armor_template) %></td>
        <td><%= link_to 'Destroy', armor_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

