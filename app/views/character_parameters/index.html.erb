<%- model_class = CharacterParameter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:level) %></th>
      <th><%= model_class.human_attribute_name(:experience) %></th>
      <th><%= model_class.human_attribute_name(:hp) %></th>
      <th><%= model_class.human_attribute_name(:strength) %></th>
      <th><%= model_class.human_attribute_name(:intellect) %></th>
      <th><%= model_class.human_attribute_name(:agility) %></th>
      <th><%= model_class.human_attribute_name(:character_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @character_parameters.each do |character_parameter| %>
      <tr>
        <td><%= link_to character_parameter.id, character_parameter_path(character_parameter) %></td>
        <td><%= character_parameter.level %></td>
        <td><%= character_parameter.experience %></td>
        <td><%= character_parameter.hp %></td>
        <td><%= character_parameter.strength %></td>
        <td><%= character_parameter.intellect %></td>
        <td><%= character_parameter.agility %></td>
        <td><%= character_parameter.character_id %></td>
        <td><%=l character_parameter.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      character_parameter_path(character_parameter), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_character_parameter_path(character_parameter), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      character_parameter_path(character_parameter),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_character_parameter_path,
            :class => 'btn btn-primary' %>
