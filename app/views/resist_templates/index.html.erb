<p id="notice"><%= notice %></p>

<h1>Listing Resist Templates</h1>

<table>
  <thead>
    <tr>
      <th>Physical</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Earth</th>
      <th>Holy</th>
      <th>Necrotic</th>
      <th>Nature</th>
      <th>Item template</th>
      <th>Character template</th>
      <th>Monster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resist_templates.each do |resist_template| %>
      <tr>
        <td><%= resist_template.physical %></td>
        <td><%= resist_template.fire %></td>
        <td><%= resist_template.water %></td>
        <td><%= resist_template.earth %></td>
        <td><%= resist_template.holy %></td>
        <td><%= resist_template.necrotic %></td>
        <td><%= resist_template.nature %></td>
        <td><%= resist_template.item_template_id %></td>
        <td><%= resist_template.character_template_id %></td>
        <td><%= resist_template.monster_id %></td>
        <td><%= link_to 'Show', resist_template %></td>
        <td><%= link_to 'Edit', edit_resist_template_path(resist_template) %></td>
        <td><%= link_to 'Destroy', resist_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

